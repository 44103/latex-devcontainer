{
  "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#$%^&*|+=[]{}`~?　、。「」【】『』（）！？てにをはがのともへでや",
  "files.associations": {
    "*.cls": "latex"
  },
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.latex.autoClean.run": "onSucceeded",
  "latex-workshop.latex.tools": [
    {
      "name": "Latexmk (upLaTeX)",
      "command": "latexmk",
      "args": [
        "-f",
        "-gg",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "Latexmk (pLaTeX)",
      "command": "latexmk",
      "args": [
        "-f",
        "-gg",
        "-pv",
        "-latex='platex'",
        "-latexoption='-kanji=utf8 -no-guess-input-env'",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "uplatex",
      "command": "uplatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-jobname=\"%DOCFILE%\"",
        "-kanji=utf8",
        "-guess-input-enc",
        "%DOCFILE%.tex"
      ]
    },
    {
      "name": "pbibtex",
      "command": "pbibtex",
      "args": [
        "%DOCFILE%",
        "-kanji=utf8"
      ],
    },
    {
      "name": "dvipdfmx",
      "command": "dvipdfmx",
      "args": [
        // "-f",
        // "haranoaji.map",
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    // {
    //   "name": "upLaTeX",
    //   "tools": [
    //     "Latexmk (upLaTeX)"
    //   ]
    // },
    // {
    //   "name": "pLaTeX",
    //   "tools": [
    //     "Latexmk (pLaTeX)"
    //   ]
    // },
    {
      "name": "uplatex default",
      "tools": [
        // "uplatex",
        // "pbibtex",
        "uplatex",
        "uplatex",
        "dvipdfmx"
      ]
    }
  ],
  "latex-workshop.latex.magic.args": [
    "-f",
    "-gg",
    "-pv",
    "-synctex=1",
    "-interaction=nonstopmode",
    "-file-line-error",
    "%DOC%"
  ],
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.dvi",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.synctex.gz",
    // for Beamer files
    "_minted*",
    "*.nav",
    "*.snm",
    "*.vrb",
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.synctex.afterBuild.enabled": true,
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  }
}
